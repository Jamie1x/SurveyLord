<% include ../partials/header.ejs %>

    <!-- MAIN CONTENT -->
    <div class="container">
      <div class="row">
        <div class="col-md-offset-3 col-md-6">
          <h1><%= answers.Title %></h1>
            <form class="form" method="post">
              <div id="form-input">
                <% for (let count = 0; count < answers.Questions.length; count++) { %>
                <div class="form-group">
                  <label for="QuestionTextField"><%= answers.Questions[count] %></label>
                  <input type="text" class="form-control" id="QuestionTextField" 
                  value="<%= answers.Answers[count] %>" name="question" disabled>
                </div>
                <% } %>
              </div>
              <br/><br/>
              <a href="/surveys/<%= answers.SurveyID %>/results" class="btn btn-primary"><i class="fa fa-undo"></i> Back</a>
              <br/><br/><br/>
            </form>
        </div>
      </div>
    </div>

<% include ../partials/footer.ejs %>
