<% include ../partials/header.ejs %>

    <!-- MAIN CONTENT -->
    <div class="container">
      <div class="row">
        <div class="col-md-offset-3 col-md-6">
          <h1><%= title %></h1>
            <form class="form" method="post">
              <div class="form-group">
                <label for="NameTextField">Title</label>
                <input type="text" class="form-control" id="NameTextField"
                placeholder="Contact Name" name="title" value="<%= connections.Title %>" required>
              </div>
              <div class="form-group">
                <label for="NumberTextField">Number</label>
                <input type="tel" pattern="\d{3}[\-]\d{3}[\-]\d{4}" title='999-999-9999' class="form-control" id="NumberTextField"
                placeholder="Phone Number" name="number" value="<%= connections.Number %>"  required>
              </div>
              <div class="form-group">
                <label for="EmailTextField">Email</label>
                <input type="email" class="form-control" id="EmailTextField"
                placeholder="Email Address" name="email" value="<%= connections.Email %>"  required>
              </div>

              <button type="submit" class="btn btn-primary"><i class="fa fa-check-square-o"></i> Submit</button>
              <a href="/connections" class="btn btn-warning"><i class="fa fa-undo"></i> Cancel</a>
              <br/><br/><br/>
            </form>
        </div>
      </div>
    </div>

<% include ../partials/footer.ejs %>
